# =============================================================================
# Portfolio Optimizer - Environment Configuration
# =============================================================================

# Application Settings
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration
# Options: sqlite, postgresql
DB_TYPE=sqlite

# SQLite Configuration (default)
SQLITE_DB_PATH=data/portfolio_optimizer.db

# PostgreSQL Configuration (for Neon DB or other PostgreSQL providers)
# Uncomment and configure when using PostgreSQL
# POSTGRES_HOST=your-db-host.neon.tech
# POSTGRES_PORT=5432
# POSTGRES_DB=portfolio_optimizer
# POSTGRES_USER=your-username
# POSTGRES_PASSWORD=your-password
# POSTGRES_SSL_MODE=require

# For Neon DB, use this format:
# DATABASE_URL=postgresql://username:password@host.neon.tech/dbname?sslmode=require

# AI/LLM Configuration
# Supports any OpenAI-compatible API (DeepSeek, OpenAI, etc.)
LLM_API_KEY=your-deepseek-api-key-here
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_MODEL=deepseek-chat
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Alternative: OpenAI
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-4

# Yahoo Finance Settings
YF_CACHE_TIMEOUT=3600
YF_MAX_RETRIES=3

# Portfolio Optimization Settings
DEFAULT_RISK_FREE_RATE=0.05
DEFAULT_CONFIDENCE_LEVEL=0.95
MAX_PORTFOLIO_ASSETS=50
OPTIMIZATION_METHOD=scipy

# Feature Flags
ENABLE_AI_INSIGHTS=True
ENABLE_BACKTESTING=True
ENABLE_ML_PREDICTIONS=False

# =============================================================================
# Email Configuration (Google SMTP for notifications)
# =============================================================================

# Gmail SMTP Settings (for registration and password reset emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_USE_TLS=True

# For Gmail, you need to create an App Password:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Go to Google Account > Security > App passwords
# 3. Generate app password for "Mail" on "Other (Custom name)"
# 4. Use that 16-character password here

# =============================================================================
# Admin Configuration
# =============================================================================

# Admin email for registration approval notifications
ADMIN_EMAIL=admin@yourdomain.com

# Base URL for email links (update for production)
BASE_URL=http://localhost:5000
# For production: BASE_URL=https://yourdomain.com

# Guest Session Settings
GUEST_SESSION_TIMEOUT=3600  # 1 hour in seconds
MAX_GUEST_SCENARIOS=5  # Maximum saved scenarios for non-registered users

# =============================================================================
# Neon DB Optimization Settings
# =============================================================================

# Enable PgBouncer/Pooler mode for Neon DB serverless
# Set to True if using Neon connection pooler
NEON_POOLER_MODE=False

# Connection timeouts (seconds)
NEON_CONNECTION_TIMEOUT=30
NEON_STATEMENT_TIMEOUT=30

# In-memory caching for guest users
ENABLE_CACHE=True
CACHE_TTL=3600  # Cache time-to-live in seconds
